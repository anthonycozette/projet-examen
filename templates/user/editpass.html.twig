{% extends 'base.html.twig' %}

{% block title %}
    Profile de
    {{ app.user.pseudo }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="mb-3 row">
            {% for message in app.flashes('message') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            <h1>
                Modification du mot de passe
            </h1>
            <form>
                <div class="mb-3">
                    <label for="pass" class="form-label">
                        Nouveau mot de passe
                    </label>
                    <input type="password" class="form-control" id="pass"></div>
                    <div class="mb-3">
                        <label for="pass2" class="form-label">
                            Confirmer le nouveau password
                        </label>
                        <input type="password" class="form-control" id="pass2"></div>

                        <button type="submit" class="btn btn-primary">
                            Valider
                        </button>
                    </form>
                {% endblock %}
                